<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Rivisio" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/poppins_regular</item>

        <item name="android:windowSplashScreenBackground">@color/primary_500</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
    </style>

    <!--bottom navigation view theming start-->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>
    <!--bottom navigation view theming end-->
</resources>